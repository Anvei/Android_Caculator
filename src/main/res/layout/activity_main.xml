<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/color1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:hint="0"
        android:gravity="right"
        android:textSize="60sp"
        android:id="@+id/edittext"
        android:maxLines="3"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="right"
        android:hint="0.0"
        android:id="@+id/textview"
        android:textSize="40sp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:rowCount="5"
        android:columnCount="4"
        android:backgroundTint="@color/color2">

        <Button android:id="@+id/button_clear"
            android:layout_row="0"
            android:layout_column="0"
            android:text="C"
            android:textSize="30sp"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/black"
            android:layout_gravity="center" />

        <Button android:id="@+id/button_divide"
            android:layout_row="0"
            android:layout_column="1"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="รท"
            android:layout_gravity="center"/>

        <Button android:id="@+id/button_multi"
            android:layout_row="0"
            android:layout_column="2"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="ร"
            android:layout_gravity="center"/>

        <Button android:id="@+id/button_delete"
            android:layout_row="0"
            android:layout_column="3"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="Del"
            android:textAllCaps="false"
            android:layout_gravity="center"/>

        <Button android:id="@+id/button_7"
            android:layout_row="1"
            android:layout_column="0"
            android:text="7"
            android:textSize="30sp"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/button_8"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:backgroundTint="@color/button_color"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_9"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center"
            android:backgroundTint="@color/button_color"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button android:id="@+id/button_subtract"
            android:layout_row="1"
            android:layout_column="3"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="-"
            android:textAllCaps="false"
            android:layout_gravity="center"/>

        <Button android:id="@+id/button_4"
            android:layout_row="2"
            android:layout_column="0"
            android:text="4"
            android:textSize="30sp"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <Button android:id="@+id/button_5"
            android:layout_row="2"
            android:layout_column="1"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="5"
            android:layout_gravity="center"/>

        <Button android:id="@+id/button_6"
            android:layout_row="2"
            android:layout_column="2"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="6"
            android:layout_gravity="center"/>

        <Button android:id="@+id/button_add"
            android:layout_row="2"
            android:layout_column="3"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="+"
            android:textAllCaps="false"
            android:layout_gravity="center"/>

        <Button android:id="@+id/button_1"
            android:layout_row="3"
            android:layout_column="0"
            android:text="1"
            android:textSize="30sp"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <Button android:id="@+id/button_2"
            android:layout_row="3"
            android:layout_column="1"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="2"
            android:layout_gravity="center"/>

        <Button android:id="@+id/button_3"
            android:layout_row="3"
            android:layout_column="2"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="3"
            android:layout_gravity="center"/>

        <Button android:id="@+id/button_assignment"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_rowSpan="2"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="="
            android:textAllCaps="false"
            android:layout_gravity="center"/>

        <Button android:id="@+id/button_percent"
            android:layout_row="4"
            android:layout_column="0"
            android:text="%"
            android:textSize="30sp"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <Button android:id="@+id/button_0"
            android:layout_row="4"
            android:layout_column="1"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="0"
            android:layout_gravity="center"/>

        <Button android:id="@+id/button_dot"
            android:layout_row="4"
            android:layout_column="2"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="."
            android:layout_gravity="center"/>

    </GridLayout>

</LinearLayout>